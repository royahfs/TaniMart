<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih -->
    <solid android:color="@android:color/white" />

    <!-- Garis pinggir abu-abu tipis -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Sudut melengkung -->
    <corners android:radius="8dp" />

    <!-- Padding biar isi teks tidak terlalu nempel -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
