<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.kasir.transaksi.pembayaran.PembayaranTunaiActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_black"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunai"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/totalTagihanLabelTunai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp130.000"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Input Uang Diterima -->
    <EditText
        android:id="@+id/etUangDiterima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Uang yang diterima"
        android:background="@drawable/bg_edittext"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>

    <!-- Tombol Uang Pas -->
    <Button
        android:id="@+id/btnUangPas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/teal_sage"
        android:text="Uang Pas"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Kembalian -->
    <TextView
        android:id="@+id/tvKembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembalian: Rp0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Tombol Bayar -->
    <Button
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/orange"
        android:text="Bayar"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>


</LinearLayout>
