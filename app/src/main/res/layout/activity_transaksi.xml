<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_transaksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".ui.kasir.transaksi.TransaksiActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar dan Search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu" />

            <EditText
                android:id="@+id/etCariProduk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:hint="Cari Produk"
                android:padding="8dp" />


            <ImageView
                android:id="@+id/btnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_shopping_cart_24"
                android:contentDescription="Cart" />
        </LinearLayout>

        <!-- TabLayout -->
<!--        android:id="@+id/tabLayout"-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill">

<!--            android:id="@+id/tabProduk"-->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk" />

<!--            android:id="@+id/tabManual"-->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Dropdown Kategori -->
        <TextView
            android:id="@+id/listKategori_Transaksi"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:background="@drawable/sage_border"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>

        <!-- RecyclerView Produk -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProduk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            tools:listitem="@layout/item_product"/>

        <!-- Bottom Tagihan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_transaksi"
            android:background="@drawable/dialogbkg"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:elevation="12dp"
            android:translationZ="8dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/bottomSheetConnect"
                android:src="@drawable/outline_remove_24"
                android:layout_gravity="center|top"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tvTagih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="13dp"
                android:text="Tagih = Rp0"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

<!--     Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/dark_teal_sage"
        app:itemTextColor="@color/dark_teal_sage"/>
</androidx.drawerlayout.widget.DrawerLayout>
