<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Produk -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:clipToOutline="true"
            android:contentDescription="Product Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nama Produk -->
        <TextView
            android:id="@+id/itemNamaKPM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_teal_sage"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintEnd_toStartOf="@id/itemDelete"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="12dp" />

        <!-- Harga Produk -->
        <TextView
            android:id="@+id/itemHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textSize="14sp"
            android:textColor="@color/teal_sage"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/itemNamaKPM"
            app:layout_constraintTop_toBottomOf="@id/itemNamaKPM"
            app:layout_constraintEnd_toEndOf="@id/itemNamaKPM" />

        <!-- Merek + Kategori -->
        <LinearLayout
            android:id="@+id/infoLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/itemHarga"
            app:layout_constraintTop_toBottomOf="@id/itemHarga"
            app:layout_constraintEnd_toEndOf="@id/itemHarga"
            app:layout_constraintBottom_toBottomOf="@id/itemImage">

            <TextView
                android:id="@+id/itemMerek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merek"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/itemKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Tombol Delete -->
        <ImageView
            android:id="@+id/itemDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/trash"
            android:background="@drawable/red_bg"
            android:contentDescription="Hapus"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
