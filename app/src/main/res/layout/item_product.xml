<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Produk -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:clipToOutline="true"
            android:contentDescription="Product Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nama Produk -->
        <TextView
            android:id="@+id/itemNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_teal_sage"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Harga Produk -->
        <TextView
            android:id="@+id/itemHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/itemNama"
            app:layout_constraintTop_toBottomOf="@id/itemNama"
            app:layout_constraintEnd_toEndOf="@id/itemNama" />

        <!-- Merek + Kategori -->
        <LinearLayout
            android:id="@+id/infoLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/itemHarga"
            app:layout_constraintTop_toBottomOf="@id/itemHarga"
            app:layout_constraintEnd_toEndOf="@id/itemHarga"
            app:layout_constraintBottom_toBottomOf="@id/itemImage">

            <TextView
                android:id="@+id/itemMerek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merek"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/itemKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



