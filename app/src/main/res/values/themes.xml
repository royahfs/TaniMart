<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme (Sudah Benar) -->
    <style name="Base.Theme.TaniMart" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_teal_sage</item>
        <item name="colorPrimaryVariant">@color/dark_teal_sage</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TaniMart" parent="Base.Theme.TaniMart" />

    <!-- Dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Kalkulator button (outlined) -->
    <style name="CalcButton.Normal" parent="Widget.MaterialComponents.Button.OutlinedButton"> <!-- DIUBAH dari MaterialComponents -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/teal_sage</item>
        <item name="strokeColor">@color/teal_sage</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <!-- Kalkulator button (filled) -->
    <style name="CalcButton.Colored" parent="Widget.MaterialComponents.Button"> <!-- DIUBAH dari MaterialComponents -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/teal_sage</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
    <!-- ======================================================= -->

    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
